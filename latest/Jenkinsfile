pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/Arunkumar0126/JenkinsWar.git', branch: 'master'
            }
        }

        stage('maven version checking') {
            steps {
                sh '/opt/maven/bin/mvn -v'
            }
        }
        stage('Build') {
            steps {
                sh '/opt/maven/bin/mvn clean install'
            }
        }
        stage('tomcat deployment') {
            steps {
                sh 'sudo cp -r target/JenkinsWar.war /opt/tomcat11/webapps/currentrelease/'
            }
        }
        stage('extract war file') {
            steps {
                sh 'sudo unzip /opt/tomcat11/webapps/currentrelease/JenkinsWar.war -d junemonthrelease'
            }
        }		
    }
}
